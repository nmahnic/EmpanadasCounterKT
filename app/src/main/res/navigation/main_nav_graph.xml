<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.nicomahnic.empanandascounterkt.UI.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
    </fragment>

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.nicomahnic.empanandascounterkt.UI.fragments.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" >
        <action
            android:id="@+id/action_ordersFragment_to_deliveryFragment"
            app:destination="@id/deliveryFragment" />
    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="com.nicomahnic.empanandascounterkt.UI.fragments.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/deliveryFragment"
        android:name="com.nicomahnic.empanandascounterkt.UI.fragments.DeliveryFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_delivery" >
        <argument
            android:name="order"
            app:argType="com.nicomahnic.empanandascounterkt.models.domain.Order"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>